    <h2>Calculadora de Aumento Salarial</h2>
    <label for="salario">Digite o sal치rio do funcion치rio:</label>
    <input type="number" id="salario" step="0.01">
    <button onclick="calcularAumento()">Calcular</button>

    <p id="resultado"></p>

    <script>
        function calcularAumento() {
            let salario = parseFloat(document.getElementById("salario").value);
            if (!isNaN(salario)) {
                let novoSalario = salario * 1.15;
                document.getElementById("resultado").innerText =
                    "Novo sal치rio com 15% de aumento: R$ " + novoSalario.toFixed(2);
            } else {
                document.getElementById("resultado").innerText =
                    "Por favor, insira um valor v치lido.";
            }
        }
    </script>
