<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Aprovado ou Reprovado?</title>
</head>
<body>
    <h2>Verificador de Aprovação</h2>
    <label for="nota1">Digite a primeira nota:</label>
    <input type="number" id="nota1" step="0.1"><br><br>

    <label for="nota2">Digite a segunda nota:</label>
    <input type="number" id="nota2" step="0.1"><br><br>

    <button onclick="verificar()">Verificar</button>

    <p id="resultado"></p>

    <script>
        function verificar() {
            let nota1 = parseFloat(document.getElementById("nota1").value);
            let nota2 = parseFloat(document.getElementById("nota2").value);

            if (!isNaN(nota1) && !isNaN(nota2)) {
                let media = (nota1 + nota2) / 2;
                if (media >= 7) {
                    document.getElementById("resultado").innerText = 
                        "Média: " + media.toFixed(2) + " → APROVADO!";
                } else {
                    document.getElementById("resultado").innerText = 
                        "Média: " + media.toFixed(2) + " → REPROVADO!";
                }
            } else {
                document.getElementById("resultado").innerText = 
                    "Por favor, insira notas válidas.";
            }
        }
    </script>
</body>
</html>